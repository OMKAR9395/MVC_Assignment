﻿@model IEnumerable<Assignment02.Models.CompanyModel>

@{
    ViewBag.Title = "Index";
}

<div class="row text-center pt-2">
    <div class="col">
        <h3>Index</h3>
    </div>
</div>

<div class="row pt-2">
    <div class="col">
        <button class="btn btn-danger pt-2" onclick="Create()">Create New</button>
    </div>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Comp_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comp_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Id = item.Comp_No }) |
                @Html.ActionLink("Details", "Details", new { Id = item.Comp_No }) |
                @Html.ActionLink("Delete", "Delete", new { Id = item.Comp_No })
            </td>
        </tr>
    }

</table>

<script type="text/javascript">
    function Create() {
        window.location.href = '@Url.Action("Create", "Company")';
    }
</script>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var message = '@TempData["Message"]';
            if (message) {
                alert(message);
            }
        }
    </script>
}
